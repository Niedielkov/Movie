@{
    ViewData["Title"] = "Home";
}

<div class="p-5 text-center bg-light">
    <h1 class="mb-3">Welcome to Movie</h1>
    <h4 class="lead text-muted">Here you will relax watching the best films what you like</h4>
    <partial name="_LoginOrFilmsButtonPartial" />
</div>

<div class="container">
    <hr />
    <img src="~/images/index_image.jpg" class="img-thumbnail" />
    <hr />
    <div class="col-md-6">
        <h3>Contact Us</h3>
        Email us any questions or inquiries or call 518-387-9999. We would be happy to answer your questions and set up a meeting with you.
    </div>
    <div class="mt-3">
        <div class="col-md-12">
            <form>
                <input type="hidden" />
                <div class="form-group">
                    <label for="Name" class="control-label">Name: </label>
                    <input id="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email: </label>
                    <input id="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="MessageBody" class="control-label">Message: </label>
                    <textarea id="MessageBody" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div class="form-group d-flex">
                    <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="col-md-6">
        <h3>About Us</h3>
        Movies application is a streaming service that offers a wide variety of award-winning TV shows, movies, anime, documentaries, and more on thousands of internet-connected devices.
        You can watch as much as you want, whenever you want without a single commercial – all for one low monthly price. There's always something new to discover and new TV shows and movies are added every week!
    </div>
</div>