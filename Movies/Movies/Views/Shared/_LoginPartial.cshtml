@using Microsoft.AspNetCore.Identity;
@inject Microsoft.AspNetCore.Identity.SignInManager<IdentityUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
<li class="nav-item">
    <a class="pr-2 text-white">@User.Identity.Name </a>
    <a class="btn btn-outline-light" data-mdb-ripple-color="dark" asp-controller="Account" asp-action="Logout">Logout</a>
</li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-light" data-mdb-ripple-color="dark" asp-controller="Account" asp-action="Login">Login</a>
        <a class="btn btn-outline-light" data-mdb-ripple-color="dark" asp-controller="Account" asp-action="Register">Register</a>
    </li>
}